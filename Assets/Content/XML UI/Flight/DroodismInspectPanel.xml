<XmlLayout xmlns="http://www.w3schools.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="Asset/ModTools/UI/XmlLayout.xsd">
    <Include path="Ui/Xml/Flight/FlightStyles.xml" />
    <Include path="Ui/Xml/InspectorPanel.xml" />
    <Include path="Droodism/ProgressBar" />
    <RectTransform class="safe-area">
    <!--Main Panel-->
    <Panel id="droodism-inspect-panel" class="flight-panel draggable" width="500" height="400" rectAlignment="LowerRight" offsetXY="-100 100" border="border" active="true">
        <Panel class="inspector-header translucent-panel" height="30" rectAlignment="UpperCenter">
            <TextMeshPro class="inspector-title" text="Life Support Resources" margin="5 0 50 0" />
            <Image class="inspector-panel-pin" width="24" height="24" rectAlignment="MiddleRight" sprite="Ui/Sprites/Common/IconCloseFlyout" onClick="OnTogglePanelState" hoverClass="inspector-panel-pin-hover"/>
        </Panel>
        <Panel width="100%" height="370" rectAlignment="LowerCenter">
            <VerticalScrollView class="no-image">
                <VerticalLayout id="FuelPercentageList" class="no-image" contentSizeFitter="vertical" padding="4" spacing="4" childForceExpandHeight="false"></VerticalLayout>
            </VerticalScrollView>
        </Panel>
        <Panel id="fuel-percentage-item-template" class="audio-btn-click" color="#2e353e7F" preferredHeight="45" active="false">
            <TextMeshPro internalId="FuelTypeName" class="label column-left" offsetXY="4 0" fontSize="15" text="FuelTypeName"/>

            <!-- 添加进度条容器 -->
            <Panel class="progress-container" width="200" height="20" rectAlignment="MiddleCenter" offsetXY="0 0">
                <Image class="progress-background" color="#3a3a3a" width="100%" height="100%"/>
                <Image internalId="FuelProgressBar" class="progress-fill" color="#00a1f2" width="50%" height="100%"/>
            </Panel>

            <!-- 添加百分比文本 -->
            <TextMeshPro internalId="FuelPercentage" class="label column-right" offsetXY="-4 0" fontSize="15" text="50%"/>
        </Panel>
    </Panel>
    </RectTransform>
    <Panel id="fuel-percentage-item-template" class="audio-btn-click" color="#2e353e7F" preferredHeight="35" active="false" onClick="OnFuelPercentageItemClick(this)">
        <TextMeshPro internalId="FuelTypeName" class="label column-left" offsetXY="4 0" fontSize="15" text="FuelTypeName"/>
        <TextMeshPro internalId="FuelPercentage" class="label column-right" offsetXY="-4 0" fontSize="15" text="FuelPercentage"/>
    </Panel>
</XmlLayout>